@model PaginationVM<Product>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Table</h4>
                    <a class="btn btn-outline-github" asp-action="create">
                        Create
                    </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Category</th>
@*                                     <th>CreateDate</th>
 *@                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var product in Model)
                                {
                                    <tr>
                                       <td>
                                            <img src="~/img/@product.ProductImages.FirstOrDefault(k=>k.IsMain)?.ImageUrl" alt="" />
                                       </td>
                                        <td>
                                            @product.Name
                                        </td>
                                        <td>
                                            @product.Price
                                        </td>
                                        <td>
                                            @product.Category.Name
                                        </td>

                                        <td>
                                            <a class="btn btn-outline-facebook" asp-action="detail" asp-route-id="@product.Id"><i class="mdi mdi-account-card-details"></i></a>
                                            <a class="btn btn-outline-primary" asp-action="update" asp-route-id="@product.Id"><i class="mdi mdi-settings"></i></a>
                                            <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@product.Id"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item  @(Model.HasPrev?"":"disabled")">
                    <a class="page-link" asp-action="index" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                </li>
                @for (int i = Model.Start; i <= Model.End; i++)
                {
                    <li class="page-item @(i==Model.CurrentPage?"disabled ":"")"><a class="page-link  @(i==Model.CurrentPage?" bg-dark ":"")" asp-action="index" asp-route-page="@i">@i</a></li>
                }
             
                <li class="page-item @(Model.HasNext?"":"disabled")">
                    <a class="page-link" asp-action="index" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>