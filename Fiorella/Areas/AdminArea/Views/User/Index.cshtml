@model IEnumerable<AppUser>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User Table</h4>
                    <a class="btn btn-outline-github" asp-action="create">
                        Create
                    </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>FullName</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Is Blocked</th>
                                    <th>Settings</th>
                                </tr>
                                <form asp-action="index">
                                    <input type="text" value="" name="searchtext" />
                                    <button type="submit">Search</button>
                                </form>
                            </thead>

                            <tbody>

                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            @user.FullName
                                        </td>
                                        <td>
                                            @user.UserName
                                        </td>
                                        <td>
                                            @user.Email
                                        </td>

                                        @if (user.IsBlocked)
                                        {
                                            <td class="text-danger">Is Blocked</td>
                                        }
                                        else
                                        {
                                            <td class="text-success">Active</td>

                                        }


                                        <td>
                                            @if (User.Identity.Name != user.UserName)
                                            {
                                                <a class="btn btn-outline-facebook" asp-action="changeStatus" asp-route-id="@user.Id">
                                                   Change Status

                                                </a>

                                            }
                                            <a class="btn btn-outline-facebook" asp-action="detail" asp-route-id="@user.Id"><i class="mdi mdi-account-card-details"></i></a>
                                            <a class="btn btn-outline-primary" asp-action="update" asp-route-id="@user.Id"><i class="mdi mdi-settings"></i></a>
                                            <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@user.Id"><i class="mdi mdi-delete"></i></a>
                                            <a class="btn btn-outline-primary" asp-action="updateuserrole" asp-controller="Role" asp-route-id="@user.Id">Update User Role</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>