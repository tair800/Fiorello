@model IEnumerable<Slider>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">slider Table</h4>
                    <a class="btn btn-outline-github" asp-action="create">
                        Create
                    </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>CreateTime</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/@slider.ImgUrl" width="150" class="rounded-0" height="150" alt="" />
                                        </td>
                                        <td>@slider.CreatedDate?.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <a class="btn btn-outline-facebook" asp-action="detail" asp-route-id="@slider.Id"><i class="mdi mdi-account-card-details"></i></a>
                                            <a class="btn btn-outline-primary" asp-action="update" asp-route-id="@slider.Id"><i class="mdi mdi-settings"></i></a>
                                            <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@slider.Id"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>