@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row mt-3">
    <h1>Reset Password</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="mt-3">
            <label>Enter your new password</label>
            <input asp-for="Password" class="form-control mt-3"/> <br />


            <label>Confirm your new password</label>
            <input asp-for="RePassword" class="form-control mt-3" /> <br />

            <button class="btn btn-outline-dark" type="submit" >Reset your password</button>
        </div>
    </form>
</div>

